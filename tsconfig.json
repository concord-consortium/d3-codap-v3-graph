{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": ["jest"],
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "noEmitOnError": true
  },
  "include": [
    "./src/**/*"
  ]
}
